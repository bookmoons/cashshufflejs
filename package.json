        "test-com": "NODE_PATH=src ava test/com",
        "test-int": "NODE_PATH=src ava test/int",
        "test-unit": "NODE_PATH=src ava test/unit",
        "test": "NODE_PATH=src ava test",
        "test-hoc": "NODE_PATH=src ava"
