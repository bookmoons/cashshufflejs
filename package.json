{
    "name": "cashshufflejs",
    "description": "JavaScript CashShuffle client library",
    "version": "0.1.0-dev",
    "license": "Unlicense",
    "keywords": [
        "bitcoin",
        "coinjoin",
        "coinshuffle",
        "cashshuffle",
        "mixing",
        "privacy"
    ],
    "homepage": "https://github.com/bookmoons/cashshufflejs",
