        "protobufjs": "~6.8.8",
        "to-arraybuffer": "1",
        "verror": "1"
    },
    "devDependencies": {
        "array-buffer-to-hex": "1",
        "ava": "^0.25.0",
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-register": "^6.26.0",
        "jsdoc": "3",
        "snazzy": "7",
        "standard": "11",
        "tmp-promise": "^1.0.5"
    },
    "ava": {
